<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Create Booking"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSelectedRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Room: None"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUnavailableSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unavailable Slots: None"
            android:textColor="#D32F2F"
            android:textStyle="italic"
            android:paddingBottom="16dp"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Selected Date"
            android:inputType="date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="Start Time"
                android:inputType="time" />

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="End Time"
                android:inputType="time" />
        </LinearLayout>

        <EditText
            android:id="@+id/etPeopleCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of People"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Equipment Needed:" />

        <CheckBox
            android:id="@+id/cbProjector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projector" />

        <CheckBox
            android:id="@+id/cbWhiteboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Whiteboard" />

        <CheckBox
            android:id="@+id/cbConferencePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conference Phone" />

        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confirm Booking" />
    </LinearLayout>
</ScrollView>
